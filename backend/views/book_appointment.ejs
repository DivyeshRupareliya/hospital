<%-include('header.ejs')-%>
<section class="content">
    <div class="block-header">
        <div class="row">
            <div class="col-lg-7 col-md-5 col-sm-12">
                <h2>Book Appointment
                <small>Welcome to Oreo</small>
                </h2>
            </div>
            <div class="col-lg-5 col-md-7 col-sm-12">
                <ul class="breadcrumb float-md-right">
                    <li class="breadcrumb-item"><a href="index.html"><i class="zmdi zmdi-home"></i> Oreo</a></li>
                    <li class="breadcrumb-item"><a href="javascript:void(0);">Appointment</a></li>
                    <li class="breadcrumb-item active">Book Appointment</li>
                </ul>

            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row clearfix">
			<div class="col-lg-12 col-md-12 col-sm-12">
				<div class="card">

                    <form action="rescheduled" method="post">
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Rescheduled Email ID....." name="search_id">
                            <span class="input-group-addon">
                                <!-- <button><i class="zmdi zmdi-search"></i></button> -->
                                <input type="submit" class="btn btn-primary btn-round zmdi zmdi-search" >
                            </span>
                        </div>
                    </form>

					<div class="header">
						<h2><strong>Book</strong> Appointment<small>Oreo Hospital Appointment</small> </h2>
						<ul class="header-dropdown">
                            <li class="remove">
                                <a role="button" class="boxs-close"><i class="zmdi zmdi-close"></i></a>
                            </li>
                        </ul>
					</div>
                    <form action="book_appointment" method="post">
                        <div class="body">
                            <div class="row clearfix">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <input type="text" class="form-control" placeholder="First Name" name="pat_fname">
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <input type="text" class="form-control" placeholder="Last Name" name="pat_lname">
                                    </div>
                                </div>
                            </div>
                            <div class="row clearfix">
                                <div class="col-sm-3">
                                    <div class="form-group">
                                        <input type="text" class="form-control" placeholder="Age" name="pat_age">
                                    </div>
                                </div>
                                <div class="col-sm-3">
                                    <select class="form-control show-tick" name="sel_doctor">
                                        <option selected="selected">Select Doctor</option>
                                        <% data.forEach(function(data) { %>
                                        <option><%= data.doc_fname %></option>
                                        <% }); %>
                                </select>
                                </div>
                                <div class="col-sm-3">
                                    <select class="form-control show-tick" name="sel_department">
                                        <option selected="selected">Select Department</option>
                                        <% data.forEach(function(data) { %>
                                            <option><%= data.doc_speciality  %></option>
                                        <% }); %>
                                    </select>
                                </div>
                                <div class="col-sm-3">
                                    <div class="form-group">
                                        <input type="text" class="form-control" placeholder="Enter Mobile number" name="pat_number">
                                    </div>
                                </div>
                            </div>
                            <div class="row clearfix">
                                <div class="col-sm-3">
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <i class="zmdi zmdi-calendar"></i>
                                        </span>
                                        <input type="text" class="form-control datetimepicker" placeholder="Please choose date & time..." name="pat_apoi_date">
                                    </div>
                                </div>
                                <div class="col-sm-3">
                                    <div class="form-group">
                                        <input type="text" class="form-control" placeholder="Enter Email ID" name="pat_email">
                                    </div>
                                </div>
                                <div class="col-sm-12">
                                    <input type="submit" value="Submit" class="btn btn-primary btn-round">
                                    <!-- <button type="submit" class="btn btn-primary btn-round">Submit</button> -->
                                    <!-- <button type="submit" class="btn btn-default btn-round btn-simple">Cancel</button> -->
                                </div>
                            </div>
                        </div>
                    </form>
				</div>
			</div>
		</div>
    </div>

</section>
<%-include('footer.ejs')-%>